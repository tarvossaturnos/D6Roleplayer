@model D6Roleplayer.Models.DiceRollsViewModel

<h1>Roll with your party</h1>

<form class="tab-interaction">
    <div class="form-group row">
        <label for="username" class="col-sm-3 col-form-label">Username</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="username" value="@Model.Username" required maxlength="100">
        </div>
    </div>
    <div class="form-group row">
        <label for="message" class="col-sm-3 col-form-label">Action</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="message" value="Dice Roll" required maxlength="100">
        </div>
    </div>
    <div class="form-group row">
        <label for="count" class="col-sm-3 col-form-label">Amount of dice</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" id="count" value="1" min="1" max="12" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-10">
            <button type="submit" class="btn btn-main" id="sendButton">Roll your dice!</button>
        </div>
    </div>
</form>

<div>
    <ul id="diceRolls" class="tab-interaction">
        @foreach (var diceRoll in Model.DiceRolls)
        {
            <li>
                <hr />
                <b class="roll-user">@diceRoll.Username</b>
                <div>@string.Format($"Performs action {diceRoll.Message}")</div>
                @{ string resultClass = diceRoll.Success ? "roll-succes" : "roll-failure"; }
                <div class="@resultClass">
                    @diceRoll.Rolls - @diceRoll.ResultMessage
                </div>
            </li>
        }
    </ul>
</div>