@model d6roleplayer.Models.DiceRollsViewModel

<h2>Roll Initiative!</h2>

<form>
    <div class="form-group row">
        <label for="count" class="col-sm-3 col-form-label">Bonus</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" id="bonus" value="0" min="0" max="10" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-10">
            <button type="submit" class="btn btn-primary" id="initiativeButton">Roll initiative!</button>
            <button type="submit" class="btn btn-reset" id="resetInitiativeButton">Reset initiative rolls</button>
        </div>
    </div>
</form>

<div>
    <ul id="initiativeList" class="dice-rolls">
        @foreach (var initiativeRoll in Model.InitiativeRolls)
        {
            <li>
                <div>
                    @initiativeRoll.Roll - @initiativeRoll.Username
                </div>
            </li>
        }
    </ul>
</div>

<hr />
<form>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-10">
           
        </div>
    </div>
</form>